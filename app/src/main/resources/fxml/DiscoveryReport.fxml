<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane maxHeight="300.0" maxWidth="600.0" minHeight="300.0" minWidth="600.0" prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.biggerconcept.projectus.DiscoveryReportController">
   <bottom>
      <BorderPane prefHeight="40.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <right>
            <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSave" prefWidth="100.0" text="%actions.save" BorderPane.alignment="CENTER" />
         </right>
         <left>
            <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" prefWidth="100.0" text="%actions.cancel" BorderPane.alignment="CENTER" />
         </left>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </BorderPane>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="%reports.discovery.name">
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="reportNameTextField" prefHeight="25.0" prefWidth="516.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="%reports.discovery.format">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="reportFormatComboBox" onAction="#handleToggleCustomTemplateControl" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </ComboBox>
            <Label text="%reports.discovery.saveLocation">
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="30.0" prefWidth="580.0">
               <children>
                  <TextField fx:id="reportSaveLocationTextField" editable="false" prefHeight="25.0" prefWidth="516.0">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="browseSaveLocationButton" mnemonicParsing="false" onAction="#handleSaveLocationBrowse" text="%actions.browse" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <CheckBox fx:id="customTemplateCheckBox" mnemonicParsing="false" onAction="#handleToggleCustomTemplate" text="%reports.discovery.customTemplate">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </CheckBox>
            <VBox fx:id="templateFileVBox" prefHeight="52.0" prefWidth="580.0">
               <children>
                  <Label text="%reports.discovery.templateFile">
                     <VBox.margin>
                        <Insets bottom="3.0" />
                     </VBox.margin>
                  </Label>
                  <HBox prefHeight="29.0" prefWidth="580.0">
                     <children>
                        <TextField fx:id="templateFileTextField" editable="false" prefHeight="25.0" prefWidth="517.0">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="browseTemplateButton" mnemonicParsing="false" onAction="#handleTemplateFileBrowse" text="%actions.browse" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
